<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeScanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="recyclerView_style">
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/dark_grey</item>
        <item name="android:scrollbarFadeDuration">200</item>
        <item name="android:verticalScrollbarPosition">left</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:layoutAnimation">@anim/layout_animation</item>
    </style>
</resources>